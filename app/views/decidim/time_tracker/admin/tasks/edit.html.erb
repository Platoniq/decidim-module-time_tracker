<%= render partial: "decidim/time_tracker/admin/breadcrumbs" %>

<div class="card">
  <div class="card-divider">
    <h2 class="card-title">
      <%= t(".title") %>
      <div class="button--title">
        <% if allowed_to? :update, :questionnaire, questionnaire: current_task.questionnaire %>
          <%= link_to t("tasks.actions.questionnaire", scope: "decidim.time_tracker.admin"), edit_questionnaire_path, class: "button tiny button--simple" %>
        <% end %>
      </div>
    </h2>
  </div>
  <div class="card-section">
    <%= decidim_form_for(@form, html: { class: "form new_task" }) do |f| %>
      <%= render partial: "form", object: f, locals: { submit: t(".submit") } %>
  <% end %>
  </div>
</div>

<%= render partial: "decidim/time_tracker/admin/activities/index", locals: { activities: current_task.activities } %>
