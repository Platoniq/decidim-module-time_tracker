<div class="card">
  <div class="card-divider">
    <h2 class="card-title">
      <%= title %>
    </h2>
  </div>
  <div class="card-section">
    <div class="row column">
      <%= form.translated :text_field, :name, autofocus: true %>
    </div>

    <div class="button--double form-general-submit">
      <%= form.submit submit %>
    </div>
  </div>
</div>
