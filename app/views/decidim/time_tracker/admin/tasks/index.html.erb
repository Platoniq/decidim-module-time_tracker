<div class="card">
  <div class="card-divider">
    <h2 class="card-title">
      <%= t(".title") %>
      <div class="button--title">
        <%= link_to t("tasks.actions.export_to_accountability", scope: "decidim.time_tracker.admin", name: t("models.task.name", scope: "decidim.time_tracker.admin")), time_tracker_exports_path, class: "button tiny button--simple" %>
        <%= link_to t("tasks.actions.new", scope: "decidim.time_tracker.admin", name: tasks_label), new_task_path, class: "button tiny button--simple" %>
      </div>
    </h2>
  </div>

    <div class="card-section">
    <div class="table-scroll">
      <table class="table-list">
        <thead>
          <tr>
            <th><%= t("models.task.fields.name", scope: "decidim.time_tracker") %></th>
            <th><%= t("models.task.fields.activities_count", scope: "decidim.time_tracker") %></th>
            <th><%= t("models.task.fields.activities_start_at", scope: "decidim.time_tracker") %></th>
            <th><%= t("models.task.fields.activities_end_at", scope: "decidim.time_tracker") %></th>
            <th><%= t("models.task.fields.assignees_accepted", scope: "decidim.time_tracker") %></th>
            <th><%= t("models.task.fields.assignees_pending", scope: "decidim.time_tracker") %></th>
            <th class="actions"><%= t("actions.title", scope: "decidim.time_tracker.admin") %></th>
          </tr>
        </thead>
        <tbody>
          <% tasks.each do |task| %>
            <tr data-id="<%= task.id %>">
              <td>
                <%= translated_attribute(task.name) %><br>
              </td>
              <td>
                <%= task.activities.count %><br>
              </td>
              <td>
                <%= l task.starts_at, format: :decidim_short if task.starts_at.present? %><br>
              </td>
              <td>
                <%= l task.ends_at, format: :decidim_short if task.ends_at.present? %><br>
              </td>
              <td>
                <%= task.assignees_count(filter: :accepted) %><br>
              </td>
              <td>
                <%= task.assignees_count(filter: :pending) %><br>
              </td>
              <td class="table-list__actions">
                <% if allowed_to? :update, :task, task: task %>
                  <%= icon_link_to "document", edit_task_form_path(task), t("tasks.actions.questionnaire", scope: "decidim.time_tracker.admin"), class: "action-icon--edit#{' action-icon-success' if task.has_questions?}" %>
                <% end %>

                <% if allowed_to? :update, :task, task: task %>
                  <%= icon_link_to "pencil", edit_task_path(task), t("tasks.actions.edit", scope: "decidim.time_tracker.admin"), class: "action-icon--edit" %>
                <% end %>

                <% if allowed_to? :destroy, :task, task: task %>
                  <%= icon_link_to "circle-x", task_path(task), t("tasks.actions.destroy", scope: "decidim.time_tracker.admin"), method: :delete, class: "action-icon--remove", data: { confirm: t("tasks.actions.confirm_destroy", scope: "decidim.time_tracker.admin") } %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
