<div class="card">
  <div class="card-divider">
    <h2 class="card-title">
      <%= title %>
      <% if action_name == "edit" %>
        <div class="button--title">
          <%= link_to t("actions.assignees", scope: "decidim.time_tracker"), task_activity_assignees_path(current_task, current_activity), class: "button tiny button--simple" %>
        </div>
      <% end %>
    </h2>
  </div>
  <div class="card-section">
    <div class="row column">
      <%= form.translated :text_field, :description, autofocus: true %>
    </div>

    <div class="row column">
      <%= form.check_box :active %>
    </div>

    <div class="row column">
      <%= form.date_field :start_date %>
    </div>

    <div class="row column">
      <%= form.date_field :end_date %>
    </div>

    <div class="columns">
      <%= form.datetime_field :requests_start_at %>
    </div>

    <div>
      <%= form.number_field :max_minutes_per_day %>
    </div>

    <div class="button--double form-general-submit">
      <%= form.submit submit %>
    </div>
  </div>
</div>
