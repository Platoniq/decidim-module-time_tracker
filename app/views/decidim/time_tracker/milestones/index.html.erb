<div class="row column view-header">
  <h2 class="heading2"> <%= t(".assignees_activity", user_name: user.name) %> </h2>
  <div class="author-data author-data--small">
    <div class="author-data__main">
      <div class="author author--inline">
        <%= link_to decidim.profile_path(user.nickname) do %>
          <span class="author__avatar">
            <%= image_tag user.avatar_url %>
          </span>
          <span class="author__name">
            <%= user.name %>
          </span>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% activities.each do |activity| %>
  <div class="row columns large-12">
    <h4 class="section-heading"><%= translated_attribute(activity.description) %></h4>
  </div>

  <div class="row columns">
    <div class="small-up-1 medium-up-2 large-up-4 card-grid">
      <%= render activity.milestones.where(user: user) %>
    </div>
  </div>
<% end %>
