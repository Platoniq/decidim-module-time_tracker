<div class="row time-tracker-activity" data-activity-id="<%= activity.id %>">
  <div class="columns large-8">
    <h2><%= translated_attribute activity.description %></h2>
  </div>
  <div class="columns large-3">
    <% if user_signed_in? %>
      <% if activity.assignee_pending? current_user %>
        <div class="callout warning"><%= t ".assignee_pending" %></div>
      <% else %>
        <a id="request" href="<%= request_path(activity) %>" data-activity-id="<%= activity.id %>" class="button large">
          <%= t("index.request", scope: "decidim.components.time_tracker.views") %>
        </a>
      <% end %>
    <% end %>
  </div>
</div>
